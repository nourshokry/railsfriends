<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>

          <th colspan="1"> </th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
          <tr>
            <td>
  <%= link_to friend.first_name + ' ' + friend.last_name, friend %>


            </td>
            
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>



            <%link_to 'Edit', edit_friend_path(friend)%>
            <td><%= button_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            


          </tr>
          <% end %>
          <% end %>

      </tbody>
    </table>

    <br>

    <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1> Hi! </h1>
<h2> Sign In or Sign Up ...</h2>
<% end %>